{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",
    "sourceRoot": "src",
    "compilerOptions": {
        "deleteOutDir": true
    },
    "projects": {
        "api": {
            "type": "application",
            "root": "src",
            "entryFile": "main"
        },
        "job": {
            "type": "application",
            "root": "src",
            "entryFile": "mainJob"
        },
        "apiAndJob": {
            "type": "application",
            "root": "src",
            "entryFile": "mainApiAndJob"
        }
    }
}
