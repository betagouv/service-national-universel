{
    "name": "apiv2",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "engines": {
        "node": "^20.17",
        "npm": "^10.8"
    },
    "scripts": {
        "dev": "concurrently 'npm run dev:api' 'npm run dev:tasks'",
        "dev:api": "nest start api --debug --watch --preserveWatchOutput",
        "dev:tasks": "PORT=3006 nest start job --debug --watch --preserveWatchOutput",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "concurrently 'nest start api' 'nest start job'",
        "start:dev": "concurrently 'npm run start:api' 'npm run start:job'",
        "start:api": "nest start api --debug --watch",
        "start:job": "PORT=3006 nest start job --debug --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest --runInBand --testTimeout=60000",
        "test:watch": "jest --watch",
        "test:cov": "jest --runInBand --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "clean": "rm -fr node_modules dist .turbo"
    },
    "dependencies": {
        "@bull-board/api": "^6.10.1",
        "@bull-board/express": "^6.10.1",
        "@bull-board/nestjs": "^6.10.1",
        "@elastic/elasticsearch": "^8.17.1",
        "@fast-csv/parse": "^5.0.2",
        "@fast-csv/format": "^5.0.2",
        "@getbrevo/brevo": "^2.2.0",
        "@nestjs-cls/transactional": "^3.0.3",
        "@nestjs/bullmq": "^11.0.2",
        "@nestjs/common": "^11.1.3",
        "@nestjs/config": "^4.0.2",
        "@nestjs/core": "^11.1.3",
        "@nestjs/elasticsearch": "^11.1.0",
        "@nestjs/jwt": "^11.0.0",
        "@nestjs/platform-express": "^11.1.3",
        "@sentry/nestjs": "^9.30.0",
        "@tanstack/react-query": "^5.29.0",
        "aws-sdk": "^2.1692.0",
        "bcrypt": "^5.1.1",
        "bullmq": "^5.54.1",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.1",
        "date-fns": "^3.6.0",
        "express-basic-auth": "^1.2.1",
        "mongoose": "^8.9.1",
        "mongoose-patch-history": "^2.0",
        "nestjs-cls": "^6.0.1",
        "nodemailer": "^6.9.16",
        "reflect-metadata": "^0.2.0",
        "rxjs": "^7.8.1",
        "snu-lib": "*",
        "uuid": "^10.0.0",
        "xlsx": "^0.18.5"
    },
    "devDependencies": {
        "@faker-js/faker": "^8.4.1",
        "@nestjs/cli": "^11.0.7",
        "@nestjs/schematics": "^11.0.5",
        "@nestjs/testing": "^11.1.3",
        "@testcontainers/mongodb": "^10.13.2",
        "@types/bcrypt": "^5.0.2",
        "@types/express": "^4.17.17",
        "@types/jest": "^29.5.2",
        "@types/multer": "^1.4.12",
        "@types/node": "^20.3.1",
        "@types/nodemailer": "^6.4.17",
        "@types/supertest": "^6.0.0",
        "@types/uuid": "^10.0.0",
        "@typescript-eslint/eslint-plugin": "^8.0.0",
        "@typescript-eslint/parser": "^8.0.0",
        "arch-unit-ts": "^1.0.8",
        "concurrently": "^9.1.2",
        "eslint": "^8.42.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-prettier": "^5.0.0",
        "jest": "^29.7.0",
        "prettier": "^3.0.0",
        "source-map-support": "^0.5.21",
        "supertest": "^7.0.0",
        "ts-jest": "^29.2.5",
        "ts-loader": "^9.4.3",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.6.3"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": ".",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "coveragePathIgnorePatterns": [
            "\\.module\\.",
            "\\.model\\.",
            "\\.mapper\\.",
            "\\.validation\\.",
            "/src/infra/",
            "/src/config/",
            "/dist/",
            "/src/instrument.ts",
            "/src/main.ts",
            "/src/mainJob.ts"
        ],
        "testEnvironment": "node",
        "moduleNameMapper": {
            "^src/(.*)$": "<rootDir>/src/$1",
            "^@config/(.*)$": "<rootDir>/src/config/$1",
            "^@admin/(.*)$": "<rootDir>/src/admin/$1",
            "^@infra/(.*)$": "<rootDir>/src/infra/$1",
            "^@shared/(.*)$": "<rootDir>/src/shared/$1",
            "^@notification/(.*)$": "<rootDir>/src/notification/$1",
            "^@task/(.*)$": "<rootDir>/src/task/$1",
            "^@plan-marketing/(.*)$": "<rootDir>/src/plan-marketing/$1",
            "^@analytics/(.*)$": "<rootDir>/src/analytics/$1",
            "^@auth/(.*)$": "<rootDir>/src/auth/$1"
        },
        "modulePathIgnorePatterns": [
            "<rootDir>/packages"
        ],
        "globalSetup": "./test/initMongoContainer.ts",
        "globalTeardown": "./test/stopMongoContainer.ts"
    }
}
