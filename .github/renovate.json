{
  "extends": [":semanticCommitTypeAll(chore)", ":semanticCommitScope(lib)"],
  "packageRules": [
    {
      "description": "Automerge non-major updates",
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true,
      "automergeType": "pr",
      "automergeSchedule": ["before 11am on Tuesdays"]
    }
  ]
}
