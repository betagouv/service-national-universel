{
  "LABEL": {
    "name": "Pull request title validation",
    "color": "EEEEEE"
  },
  "CHECKS": {
    "regexp": "^(refactor|fix|feat|chore|revert)\\((?:api|admin|app|apiv2|misc|all|github|terraform|kb|lib|release)(?:, ?(?:api|admin|app|apiv2|misc|github|terraform|kb|lib))*\\): .+$",
    "regexpFlags": "i",
    "ignoreLabels": ["bypass title", "meta"]
  },
  "MESSAGES": {
    "success": "Title is compliant",
    "failure": "Title is not respecting the guidelines.",
    "notice": ""
  }
}
