{
  "labels": ["dependencies"],
  "extends": [
    "config:base",
    ":semanticCommitTypeAll(chore)",
    ":semanticCommitScope(lib)"
  ],
  "packageRules": [
    {
      "description": "Automerge non-major updates",
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": false,
      "automergeType": "pr",
      "automergeSchedule": ["before 8am on Tuesdays"]
    }
  ]
}
