{
  "compilerOptions": {
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "preserveWatchOutput": true,
    "module": "ESNext",
    "target": "ES2021",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "@/utils" : ["./src/utils"],
      "@/*": ["./src/*"]
    },
  },
  "exclude": [
    "**/node_modules/*"
  ],
  "extends": "@tsconfig/vite-react/tsconfig.json"
}
