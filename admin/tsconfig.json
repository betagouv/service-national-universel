{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "src",
    "outDir": "build",
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["dom", "es2017", "esnext", "es2019", "es2019.object", "dom.iterable"],
    "module": "esnext",
    "strict": false,
    "target": "es2022",
    "downlevelIteration": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "exclude": ["**/build/**/*", "node_modules", "**/node_modules/*", "src/**/*.test.ts", "src/**/*.test.tsx", "src/**/*.spec.ts", "src/**/*.spec.tsx"],
  "ts-node": {
    "swc": true,
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
