{
  "compilerOptions": {
    "allowJs": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "preserveWatchOutput": true,
    "module": "ESNext",
    "target": "ES2021",
    "outDir": "./dist",
    "rootDir": "./src",
    "incremental": true,
  },
  "include": ["src/**/*.ts", "src/**/*.js"],
  "exclude": [
    "**/node_modules/*"
  ]
}
