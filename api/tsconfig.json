{
  "compilerOptions": {
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "preserveWatchOutput": true,
    "module": "NodeNext",
    "target": "ES2021",
    "outDir": "./src",
    "rootDir": "./src",
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "**/node_modules/*"
  ]
}
